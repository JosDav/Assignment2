## This function creates a list of functions that allows the next function called cacheSolve to solve the inverse of the matrix 
## in the makeCacheMatrix

makeCacheMatrix<-function(x=matrix()){
	m<-NULL
	set<-function(y){
		x<<-y
		m<<-NULL
	}
	get<-function()x
	setsolve<-function(solve)m<<-solve
	getsolve<-function()m
	list(set=set,get=get,setsolve=setsolve,getsolve=getsolve)
}

## This function allows the matrix stored in the previous function  to compute the inverse of the matrix and to store it in the 
## cache of the device and recall it again

cacheSolve<-function(x,...){
	m<-x$getsolve()
	if(!is.null(m)){
		message("getting cached data")
		return(m)
	}
	data<-x$get()
	m<-solve(data,...)
	x$setsolve(m)
	m
}
